mixin product(img, name, discount, rrp, price, classes)
    .swiper-slide
        li.cm-prod-item(class=classes)
            a(href="#")
                div.cm-prod-wrapper
                    div.cm-prod-image
                        img.swiper-lazy(data-src="//promotion-assets.11street.my/assets/components/global/1.0.0/img/" + img, src="//promotion-assets.11street.my/assets/components/global/1.0.0/img/blank.png")
                    div.cm-prod-info
                        h3.cm-prod-name #{name}
                        div.cm-prod-price
                            p.cm-selling-price RM #{price}
                        if discount == "Special Price"
                            div.cm-prod-discount
                                span #{discount}
                        else
                            div.cm-prod-discount 
                                | #{discount}
                                span % OFF
                div.cm-prod-badge
                    div.cm-badge-shipping
                    div.cm-badge-lowest
                    div.cm-badge-official
                    
